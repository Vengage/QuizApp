<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Question">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
    </style>

    <style name="SubQuestion">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="radio_image">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <!--<item name="android:padding">@dimen/padding_margin_16dp</item>-->
        <!--<item name="android:drawable">@drawable/ardei_galben</item>-->
    </style>


    <style name="checkbox_image">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <!--<item name="android:layout_weight">1</item>-->
        <!--<item name="android:padding">@dimen/padding_margin_16dp</item>-->
        <!--<item name="android:drawable">@drawable/ardei_galben</item>-->
    </style>

    <style name="checkbox_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:text">Lorem ipsum</item>
        <!--<item name="android:layout_weight">1</item>-->
        <item name="android:padding">@dimen/padding_margin_16dp</item>
        <!--<item name="android:drawable">@drawable/ardei_galben</item>-->
    </style>

    <style name="Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingLeft">@dimen/padding_margin_16dp</item>
        <item name="android:paddingRight">@dimen/padding_margin_16dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
</resources>
