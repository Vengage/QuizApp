<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/question_three"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Third question -->

    <TextView
        android:id="@+id/question_three_title"
        style="@style/Question"
        android:gravity="center_horizontal"
        android:text="@string/which_grows_in_soil"/>

    <RadioGroup
        android:id="@+id/answers_group_question_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/question_three_title"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingLeft="72dp"
        android:paddingStart="72dp">

        <RadioButton
            android:id="@+id/answer_1_question_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_margin_16dp"
            android:text="@string/cucumber"/>

        <RadioButton
            android:id="@+id/answer_2_question_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_margin_16dp"
            android:text="@string/tomato"/>

        <RadioButton
            android:id="@+id/answer_3_question_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_margin_16dp"
            android:text="@string/pepper"/>

        <RadioButton
            android:id="@+id/answer_4_question_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_margin_16dp"
            android:text="@string/patato"/>

    </RadioGroup>

</RelativeLayout>