<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/question_six"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Sixth question -->

    <ImageView
        android:id="@+id/question_six_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="48dp"
        android:gravity="center_horizontal"
        android:src="@drawable/three_vegetables"/>

    <TextView
        android:id="@+id/question_six_title"
        style="@style/SubQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_six_image"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:text="@string/what_vegetables"
        />

    <LinearLayout
        android:id="@+id/first_layout_question_six"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/question_six_title"
        android:orientation="vertical"
        android:paddingLeft="72dp"
        android:paddingStart="72dp">

        <CheckBox
            android:id="@+id/answer_1_question_six"
            style="@style/checkbox_text"
            android:text="@string/tomato"/>

        <CheckBox
            android:id="@+id/answer_2_question_six"
            style="@style/checkbox_text"
            android:text="@string/onion"/>

        <CheckBox
            android:id="@+id/answer_3_question_six"
            style="@style/checkbox_text"
            android:text="@string/cucumber"/>

        <CheckBox
            android:id="@+id/answer_4_question_six"
            style="@style/checkbox_text"
            android:text="@string/cabbage"/>

    </LinearLayout>

</RelativeLayout>