<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/question_one"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- First question -->

    <ImageView
        android:id="@+id/question_one_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="48dp"
        android:gravity="center_horizontal"
        android:src="@drawable/brocoli_512"/>

    <TextView
        android:id="@+id/question_one_title"
        style="@style/SubQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_one_image"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding_margin_16dp"
        android:text="@string/what_vegetable_is_that"
        />

    <RadioGroup
        android:id="@+id/answers_group_question_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/question_one_title"
        android:orientation="vertical"
        android:paddingLeft="72dp"
        android:paddingStart="72dp">

        <RadioButton
            android:id="@+id/answer_1_question_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/cucumber"/>

        <RadioButton
            android:id="@+id/answer_2_question_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/tomato"/>

        <RadioButton
            android:id="@+id/answer_3_question_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/pepper"/>

        <RadioButton
            android:id="@+id/answer_4_question_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/broccoli"/>

    </RadioGroup>

</RelativeLayout>