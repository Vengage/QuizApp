<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.quizapp.MainActivity">

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Alegeti din imaginile de mai jos o rosie?"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        style="@style/Question"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/question"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/answers_left_group"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_margin_16dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/answer_1"
                style="@style/radio_image"
                android:drawableRight="@drawable/castraveti_512"/>

            <RadioButton
                android:id="@+id/answer_2"
                android:drawableRight="@drawable/cartof_512"
                style="@style/radio_image"/>

        </RadioGroup>

        <RadioGroup
            android:id="@+id/answers_right_group"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_margin_16dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/answer_3"
                style="@style/radio_image"
                android:drawableRight="@drawable/gulie_512"/>

            <RadioButton
                android:id="@+id/answer_4"
                style="@style/radio_image"
                android:drawableRight="@drawable/rosie_512"/>
        </RadioGroup>
    </LinearLayout>


    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/question"
        android:layout_alignStart="@+id/question"
        android:text="@string/back"
        style="@style/Button"/>

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/back"
        android:layout_alignEnd="@+id/question"
        android:layout_alignRight="@+id/question"
        android:text="@string/next"
        style="@style/Button"/>


</RelativeLayout>
